<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center py-3">Enter Water Station Data</h2> <a href="/" class="btn btn-info mb-5">Go Home</a>

            <% if (typeof errors !=="undefined" ) { %>
                <% errors.forEach(error=> { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>
                            <%- error.msg %>
                        </strong>
                    </div>

                    <% }) %>
                        <% } %>
                            <% if (typeof message !="undefined" ) { %>
                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <strong>
                                        <%- message %>
                                    </strong>
                                </div>
                                <% } %>
                                    <form action="/add/new" method="post">
                                        <div class="form-group my-2">
                                            <label for="stationId">Station ID</label>
                                            <input type="text" name="stationId" id="stationId" class="form-control"
                                                placeholder="Enter Station ID">
                                        </div>
                                        <div class="form-group my-2">
                                            <label for="Location">Station Location</label>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <input type="text" name="Lat" id="Lat" class="form-control"
                                                        placeholder="Enter Latitude">
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="text" name="Long" id="Long" class="form-control"
                                                        placeholder="Enter Longitude">
                                                </div>
                                            </div>


                                        </div>

                                        <div class="form-group my-2">
                                            <label for="StationType">Choose Station type</label>
                                            <select class="form-control" name="StationType" id="StationType">
                                                <option value="Dam">Dam</option>
                                                <option value="Community Well">Community Pump</option>
                                                <option value="Well">Well</option>
                                                <option value="Pump Station">Pump Station</option>
                                            </select>
                                        </div>
                                        <div class="form-group my-2">
                                            <label for="Capacity">Station Capacity</label>
                                            <input type="number" name="Capacity" id="Capacity" class="form-control"
                                                placeholder="Enter Station Capacity">
                                        </div>
                                        <button type="submit" class="btn btn-info">Save Water
                                            Station</button>
                                    </form>
        </div>
    </div>
</div>